    "components": {
        "schemas": {
            "StorePizzaOrderRequest": {
                "type": "object",
                "properties": {
                    "localStorage": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "Identificador del producto o del pizza personalizada.",
                                    "example": "CUSTOM_3",
                                    "default": "AS001"
                                },
                                "price": {
                                    "type": "number",
                                    "description": "Precio del producto o pizza personalizada.",
                                    "example": 75600,
                                    "minimum": 0
                                },
                                "amount": {
                                    "type": "integer",
                                    "description": "Cantidad seleccionada por el usuario del producto",
                                    "example": 1,
                                    "minimum": 1
                                },
                                "custom": {
                                    "type": "boolean",
                                    "description": "Tipo de producto, puede ser un producto normal o una pizza personalizada.",
                                    "example": true
                                },
                                "size": {
                                    "type": "integer",
                                    "description": "Tama\u00f1o de la pizza personalizada.",
                                    "example": 3
                                },
                                "crust": {
                                    "type": "integer",
                                    "description": "Tipo de corteza de la pizza personalizada.",
                                    "example": 5
                                },
                                "topping": {
                                    "type": "integer",
                                    "description": "Estilo de la corteza de la pizza personalizada.",
                                    "example": 5
                                },
                                "left-half": {
                                    "type": "object",
                                    "description": "Validaci\u00f3n para la mitad izquierda",
                                    "properties": {
                                        "sauce": {
                                            "type": "integer",
                                            "description": "Salsa de la pizza personalizada para la mitad izquierda.",
                                            "example": 8
                                        },
                                        "choose": {
                                            "type": "array",
                                            "description": "Ingredientes de la pizza personalizada para la mitad izquierda.",
                                            "example": [
                                                2,
                                                13,
                                                11,
                                                9,
                                                8
                                            ],
                                            "items": {
                                                "type": "integer"
                                            }
                                        }
                                    },
                                    "required": [
                                        "sauce"
                                    ]
                                },
                                "right-half": {
                                    "type": "object",
                                    "description": "Validaci\u00f3n para la mitad derecha",
                                    "properties": {
                                        "sauce": {
                                            "type": "integer",
                                            "description": "Salsa de la pizza personalizada para la mitad derecha.",
                                            "example": 4
                                        },
                                        "choose": {
                                            "type": "array",
                                            "description": "Ingredientes de la pizza personalizada para la mitad derecha.",
                                            "example": [
                                                13,
                                                6,
                                                7,
                                                12
                                            ],
                                            "items": {
                                                "type": "integer"
                                            }
                                        }
                                    }
                                }
                            },
                            "required": [
                                "id",
                                "price",
                                "amount",
                                "custom"
                            ]
                        }
                    }
                },
                "required": [
                    "localStorage"
                ],
                "title": "StorePizzaOrderRequest"
            }
        },
        "responses": {
            "ValidationException": {
                "description": "Validation error",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "description": "Errors overview."
                                },
                                "errors": {
                                    "type": "object",
                                    "description": "A detailed description of each field that failed validation.",
